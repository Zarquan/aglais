
# Worker nodes.
{% for hostname in groups['workers'] %}
Host {{ hostname }}
    User {{ hostvars['gateway'].login }}
    ProxyCommand ssh -W %h:%p -l {{ hostvars['gateway'].login }} -F {{ lookup('env','HOME') }}/.ssh/ansible-config gateway
    ControlPath ~/.ssh/%r@%h:%p
    ControlMaster auto
    ControlPersist 5m

{% endfor %}

